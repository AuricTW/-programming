//記憶體位置
#include<stdio.h> 
#include<stdlib.h>
#include<time.h>
int main(){
	int arr[]={3,4,5,6,7};
	int sz=sizeof(arr)/sizeof(int);
	printf("%d\n",sz);
	
	printf("arr: \t%p\n",sz);
	printf("arr[0]: \t%p\n",&arr[0]);
	printf("arr[1]: \t%p\n",&arr[1]);
	printf("arr[2]: \t%p\n",&arr[2]);
	printf("arr[3]: \t%p\n",&arr[3]);

	return 0;
}
